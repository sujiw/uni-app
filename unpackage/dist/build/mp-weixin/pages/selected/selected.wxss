
.gif-wave {
	position: absolute;
	width: 100%;
	bottom: 0;
	left: 0;
	z-index: 99;
	mix-blend-mode: screen;
	height: 70rpx;
}
.tower-swiper .swiper-title {
	text-align: center;
	white-space: nowrap;
}
.tower-swiper .tower-item {
	-webkit-transform: scale(-webkit-calc(0.5 + var(--index) / 10));
	    -ms-transform: scale(calc(0.5 + var(--index) / 10));
	        transform: scale(calc(0.5 + var(--index) / 10));
	margin-left: -webkit-calc(var(--left) * 100rpx - 100rpx);
	margin-left: calc(var(--left) * 100rpx - 100rpx);
	z-index: var(--index);
	width: 200rpx;
	height: 260rpx;
}
.box {
	margin: 20rpx 0;
}
.box view.cu-bar {
	margin-top: 20rpx;
}
